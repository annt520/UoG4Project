        <header id="header" class="sticky-style-2">

            <div class="container clearfix">

                <!-- Logo
                ============================================= -->
                <div id="logo" class="divcenter">
                    <a href="~/Posts/Index" class="standard-logo" data-dark-logo="~/Images/mmmovies.png"><img class="divcenter" src="~/Images/mmmovies.png" alt="MMmovies"></a>
