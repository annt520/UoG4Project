@model IEnumerable<Assignment.Models.Post>
@using Assignment.Models
@{
    ViewBag.Title = "View Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();
}


<center>

    <h2>Delete Posts</h2>

    <table class="table table-striped" style="width : 50%">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="text-align:center">Post Name</th>
                <th scope="col" style="text-align:center">Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>

                    <td style="text-align:center">@Html.DisplayFor(modelItem => item.Title)</td>
                    <td style="text-align:center">
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) &nbsp;*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>

                </tr>
            }
        </tbody>
    </table>
</center>

